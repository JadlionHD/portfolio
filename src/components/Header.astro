---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { fade } from "astro:transitions";
const routeName = Astro.url.pathname.replace(/\/$/, "");
---

<header class="sticky top-0 z-10">
  <nav class="flex items-center justify-between">
    {
      routeName !== "/about" && (
        <a href="/" class="flex md:flex-row flex-col items-center gap-2">
          <img
            width={32}
            height={32}
            src="https://avatars.githubusercontent.com/u/48410066?v=4"
            alt="Profile Github"
            class={`rounded-full ${routeName === "/about" ? "hidden" : ""}`}
            transition:name="profile-github"
            transition:animate={fade({ duration: "0.25s" })}
          />

          <div
            transition:name="nav-name"
            transition:animate={fade({ duration: "0.25s" })}
            class={`text-base font-bold ${routeName === "/about" ? "hidden" : ""}`}
          >
            {SITE_TITLE}
          </div>
        </a>
      )
    }

    <div class="internal-links" transition:name="nav-menu" transition:animate={fade({ duration: "0.25s" })}>
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
</style>

<script>
  const menuToggle = document.getElementById("menu-toggle");
  const menuContainer = document.getElementById("menu-container");

  menuToggle?.addEventListener("click", () => {
    console.log("clicked");
    menuContainer?.classList.toggle("hidden");
  });
</script>
