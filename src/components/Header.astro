---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
const routeName = Astro.url.pathname;
---

<header>
  <nav>
    <a href="/" class="flex items-center gap-x-4">
      <img
        width={32}
        height={32}
        src="https://avatars.githubusercontent.com/u/48410066?v=4"
        alt="Profile Github"
        class={`rounded-full ${routeName === "/about" ? "hidden" : ""}`}
        transition:name="profile-github"
      />
      <h2 transition:name="nav-name" class={`${routeName === "/about" ? "hidden" : ""}`}>
        {SITE_TITLE}
      </h2>
    </a>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
    </div>
    <div class="social-links">
      <a href="https://x.com/jadlionhd" target="_blank">
        <span class="sr-only">Follow JadlionHD on X</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16">
          <path
            d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z"
          ></path>
        </svg>
      </a>
